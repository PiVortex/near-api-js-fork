    "commitlint": "19.7.1",
    "esbuild-fix-imports-plugin": "^1.0.21",
    "eslint": "8.20.0",
    "husky": "9.1.7",
    "rimraf": "6.0.1",
    "tsconfig": "workspace:*",
    "tsup": "^8.5.0",
    "turbo": "2.4.4",
